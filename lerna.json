{
    "ci": true,
    "packages": [
      "packages/cache/*",
      "packages/core/*",
      "packages/transports/*",
      "packages/tracing-adapters/*",
      "packages/services/*",
      "packages/lock-stores/*",
      "packages/lock-stores/lock-store-adapters/*"
    ],
    "version": "independent",
    "command": {
      "bootstrap": {
        "hoist": true
      },
      "publish": {
        "message": "chore(release): Publish %s",
        "conventionalCommits": true
      }
    },
    "ignoreChanges": [
      "**/changelog.md",
      "**/CHANGELOG.md",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/test/**",
      "lerna.json",
      "readme.md"
    ]
  }